// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  addresses Address[]
}

model Address {
  id      String @id @default(uuid())
  line    String
  city    String
  state   String
  country String
  cep     String
  user    User   @relation(fields: [userId], references: [id])
  userId  String

  @@index([userId])
}
